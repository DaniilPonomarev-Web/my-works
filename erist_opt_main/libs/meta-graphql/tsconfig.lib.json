{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.tsx",
    "src/lib/queries/index.ts",
    "src/lib/queries/signUpUser.mutation.ts",
    "src/lib/queries/login.mutation.ts",
    "src/lib/queries/whoIAm.query.ts",
    "src/lib/queries/verifyTokenUser.query.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
